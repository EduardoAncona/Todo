<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ancona.todo.SegundaVentana">

    <TextView android:text="Ancona" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hello" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/dia"
        android:layout_below="@+id/hello"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/condicion"
        android:layout_alignTop="@+id/imagen"
        android:layout_alignRight="@+id/dia"
        android:layout_alignEnd="@+id/dia" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:id="@+id/imagen"
        android:layout_below="@+id/dia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView2"
        android:layout_below="@+id/condicion"
        android:layout_alignLeft="@+id/dia"
        android:layout_alignStart="@+id/dia" />


</RelativeLayout>
